{% extends "layouts/base.njk" %}
{% set pageCriticalStyles = ['css/about.css'] %}
{% block content %}
  <div slot="observable">
    {% include "partials/post-hero.html" %}
  </div>
  <div class="post-title">
    <h1 class="text-in thirdin">{{ title }}</h1>
    {% if subtitle %}
      <h2 class="text-in thirdin subtitle">{{ subtitle }}</h1>
    {% endif %}
  </div>
  <p id="tagline" class="site-tag">
    <span class="second-there">Feel free to give me a follow on X
      <a style="color: var(--PrimaryText);" target="_blank" rel="noopener" href="{{ metadata.author.twitter_url }}">{{ metadata.author.twitter }}</a>.
    </span>
  </p>
  {%- set firstCard = {
  "title": "Things I've worked on",
  "link": {
    "href": "/",
    "text": "Recent blog posts"
  }
} -%}
  {%- include "partials/projects.html" -%}
{% endblock %}
{% block footer %}
  {% include 'partials/something-wrong.html' %}
{% endblock %}