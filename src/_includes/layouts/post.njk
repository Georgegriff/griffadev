{% extends "layouts/base.njk" %}

{% set pageCriticalStyles = ['css/blog.css'] %}

{% block content %}
{% set seriesInfo = {series:series, seriesEntries: seriesEntries} | getSeriesInfo %}
<div class="post-before">
    {% include "partials/post-hero.html" %}
</div>
<div slot="before"></div>


<article class="post content">
    <div slot="observable" class="post-title">
        <h1 class="text-in thirdin">{{ title }}</h1>
    </div>
    {% set postContent = content %}
    {% set date = page.date %}
    <div class="post-meta-sticky">
        {% include 'partials/share-page.html' %}
        {% include "partials/post-meta.html" %}
    </div>
    {% include "partials/post-tags.html" %}
    <blockquote>{{tagline}}</blockquote>
    {% include 'partials/series-nav.html' %}
    <section class="post-content">
        {{ content | safe }}
    </section>
    {% include 'partials/series-nav.html' %}
    {% include 'partials/recommended-posts.html' %}
</article>
{% endblock %}